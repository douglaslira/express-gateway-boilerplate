{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist/server",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"dist",
		"node_modules",
		"test/**/*.ts"
	]
}
